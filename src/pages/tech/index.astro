---
import BaseLayout from "../../layouts/BaseLayout.astro";
import FeaturedImg from "../../assets/images/projects/collage_book_img.png";
import Image from "astro/components/Image.astro";
// import FeaturedProjects from "../../components/index/FeaturedProjects.astro";

const projects = [
	{
		label: "A Flagrant Myth - a hypertext collage book",
		link: "https://florence-yuan.github.io/collage-book/",
		featured: true,
		img: FeaturedImg,
		description:
			"Inspired by Max Ernst's 1929 work The Hundred Headless Woman. \nEach collage is made by digitally combining vintage prints with actual photos. \nBetween the demolition of old neighborhoods and the mysterious appearance of half-goat, half-human creatures, the line between reason and disorder begins to blur... A story about change and memory.",
	},
	{
		label: "Virtual piano and recorder",
		link: "https://florence-yuan.github.io/virtual-instrument/",
	},
	{
		label: "Classical music",
		link: "https://github.com/florence-yuan/instrument_classifier",
	},
	{
		label: "Infinity Hotel concept game",
		link: "https://florence-yuan.github.io/spider-game/",
	},
	{
		label: "Random crossword",
		link: "https://florence-yuan.github.io/fill-in-puzzle/",
	},
	{
		label: "Classic chess",
		link: "https://florence-yuan.github.io/react-chess-app/",
	},
	{
		label: "Falling squares game",
		link: "https://florence-yuan.github.io/square-game/",
	},
	{ label: "Wizard of Oz concept game", link: "#" },
	{ label: "Hypertext story", link: "#" },
];
---

<BaseLayout pageTitle="Tech">
	<div class="flex">
		<div class="article__fig">
			<!-- <div class="article__svg" /> -->
		</div>
		<article>
			<h1>Tech, web-dev & multimedia</h1>
			<ul class="projects">
				{
					projects.map(({ label, link, featured, img, description }) =>
						!featured ? (
							<li class="project">
								<a
									class="proj__link link--no-underline"
									href={link}
								>
									<p class="proj__title">
										{label}
									</p>
								</a>
							</li>
						) : (
							<li class="project project--featured">
								<a
									class="proj__link link--no-underline"
									href={link}
								>
									<Image
										src={img}
										alt=""
										class="proj__img"
									/>
									<p class="proj__title">{label}</p>
									<p class="proj__desc">{description}</p>
								</a>
							</li>
						),
					)
				}
			</ul>
		</article>
	</div>
</BaseLayout>

<style>
	.flex {
		position: relative;
		display: flex;
		gap: calc(3rem + 3vw);
		margin: 5rem auto;
		justify-content: right;
	}

	@media (min-width: 1700px) {
		.flex {
			padding-right: 12vw;
		}
	}

	article {
		position: relative;
		z-index: 10;
		flex: 1;
		margin: 0;
		background-image: url(../../assets/images/coder.svg);
		background-size: 35%;
		background-repeat: no-repeat;
		background-position: right 100%;
	}

	.article__fig {
		position: absolute;
		top: 0;
		left: 5%;
		width: 60rem;
		max-width: 100%;
		height: 55rem;
		background-image: url("../../assets/images/lamp_unlit.png");
		background-size: 100%;
		background-repeat: no-repeat;
		background-position-x: 0%;
		z-index: 0;
	}

/* 	.article__fig:hover {
		background-image: url(../../assets/images/lamp_lit.png);
	} */

	.article__svg {
		position: absolute;
		bottom: 5rem;
		right: -5rem;
		display: block;
		width: 20rem;
		height: 20rem;
		background-image: url(../../assets/images/coder.svg);
		background-size: contain;
		background-repeat: no-repeat;
	}

	.project {
		list-style: none;
		width: max-content;
		max-width: 100%;
	}

	.project + .project {
		margin-top: 1.6em;
	}

	.proj__title {
		font-size: 2.2rem;
		font-family: "Belarus";
		text-transform: uppercase;
		width: max-content;
	}

	.proj__link:hover .proj__title {
		text-decoration: 2px underline;
		text-underline-offset: 5px;
	}

	.project--featured {
		border-bottom: 1px solid;
		margin-bottom: 3.5em;
	}

	.project--featured .proj__link {
		display: block;
		padding-bottom: 2em;
	}

	.proj__img {
		display: block;
		max-width: 100%;
		height: auto;
	}

	.proj__desc {
		padding-top: .6em;
		line-height: 1.6;
	}
</style>

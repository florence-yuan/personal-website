---
import BaseLayout from "../layouts/BaseLayout.astro";
import AnimateLine from "../components/utilities/AnimateLine.astro";
import PostList from "../components/utilities/PostList.astro";

const pageTitle = 'Blog';
---

<BaseLayout pageTitle={pageTitle}>
	<section class="section--blog">
		<h1 class="section__title title--no-break">
			<AnimateLine text='The Curiosity Shop' />
		</h1>
		<p>Selected short stories, essays, and plays.</p>
	
		<PostList category="fiction"/>
	</section>
</BaseLayout>

<style>
	.section--blog .section__title {
		font-size: 5rem;
		margin-top: 2rem;
	}
</style>